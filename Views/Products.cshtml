@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Products>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
	Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <title>All Products</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
		<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css" />
</head>
<body>
	<!-- Navigation -->
		<div class="container">
			<nav class="navbar navbar-expand navbar-light">
				<a class="navbar-brand font-weight-bold" href="index.html">UmbracoAscend</a>
				<!-- Links -->
				<ul class="navbar-nav">
					<li class="nav-item">
					    <a class="nav-link" href="products">Products</a>
					</li>
					<li class="nav-item">
					    <a class="nav-link" href="Contentpage-Advanced.html">About Us</a>
                    </li>
                    <li class="nav-item">
					    <a class="nav-link" href="Blog.html">Operations</a>
                    </li>
                    <li class="nav-item">
					    <a class="nav-link" href="Contentpage2.html">Press Releases</a>
					</li>
					<li class="nav-item">
					    <a class="nav-link" href="Contactpage.html">Contact</a>
					</li>
				</ul>
			</nav>
		</div>
    <header>
        <h1>All Products</h1>
    </header>
    <main>
        <ul>
            @foreach (var product in Model.Children)
            {
                <li>
                    <h2>
						<a href="@product.Url()">@product.Name</a>
						</h2>
                    <p>Strength: @product.Value("strength")</p>

                    <p>NDC Number: @product.Value("Ndc")</p>
                    
                </li>
            }
        </ul>
    </main>
    <footer>
        
    </footer>
</body>
</html>
